<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Activity"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNameHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHome"
        android:layout_marginTop="16dp"
        android:hint="Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextMobileHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNameHome"
        android:layout_marginTop="16dp"
        android:hint="Mobile"
        android:inputType="phone"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextAddressHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMobileHome"
        android:layout_marginTop="16dp"
        android:hint="Address"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextMasjidAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAddressHome"
        android:layout_marginTop="16dp"
        android:hint="Masjid Amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextMadrassaAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMasjidAmount"
        android:layout_marginTop="16dp"
        android:hint="Madrassa Amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonSaveHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextMadrassaAmount"
        android:layout_marginTop="16dp"
        android:text="Save" />

    <Button
        android:id="@+id/buttonExtractExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSaveHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Extract in Excel" />
    <Button
        android:id="@+id/buttonClearDataHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonExtractExcel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Clear ALL Data"
        android:onClick="onClearDataButtonClickHome" />
    <Button
        android:id="@+id/buttonShowAllData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonClearDataHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Show Home Data"
         />



</RelativeLayout>
